<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Smiley face circle (the face) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFDE03" /> <!-- Yellow color for the face -->
        </shape>
    </item>

    <!-- Left eye (white circle) -->
    <item android:top="20dp" android:left="20dp" android:right="30dp" android:bottom="30dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- White color for the eye -->
        </shape>
    </item>

    <!-- Right eye (white circle) -->
    <item android:top="20dp" android:left="70dp" android:right="80dp" android:bottom="30dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- White color for the eye -->
        </shape>
    </item>

    <!-- Smiling mouth (semi-circle) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for the mouth -->
            <size android:height="10dp" android:width="60dp" />
        </shape>
    </item>
</layer-list>